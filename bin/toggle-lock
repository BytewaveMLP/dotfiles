#!/bin/sh

if [ ! -d "/tmp/$USER/" ] ; then
	mkdir /tmp/$USER/
fi

if [ ! -f "/tmp/$USER/do_lock" ] ; then
	do_lock=true
else
	do_lock=`cat /tmp/$USER/do_lock`
fi

if [ "$do_lock" = true ] ; then
	do_lock=false
	xset -dpms
	xautolock -disable
else
	do_lock=true
	xset +dpms
	xautolock -enable
fi

echo "$do_lock" > /tmp/$USER/do_lock
