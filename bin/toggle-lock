#!/bin/sh

usage() {
	echo "Usage: $(basename "$0") [options]\n"
	echo "--status\tPrints the current status of the autolocker (true if on, false if off)"
}

if [ ! -d "/tmp/$USER/" ] ; then
	mkdir /tmp/$USER/
fi

if [ ! -f "/tmp/$USER/do_lock" ] ; then
	do_lock=true
else
	do_lock=`cat /tmp/$USER/do_lock`
fi

if [ -z "$1" ] ; then
	if [ "$do_lock" = true ] ; then
		do_lock=false
		xset -dpms
		xautolock -disable
	else
		do_lock=true
		xset +dpms
		xautolock -enable
	fi

	echo "$do_lock" > /tmp/$USER/do_lock
elif [ "$1" = "--status" ] ; then
	echo "$do_lock"
else
	usage
fi
